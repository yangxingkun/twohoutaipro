    <script>
    $(function(){
        $("#btn").click(function(){
            $.ajax({
                type:"post",
                url:"/users/login",
                dataType:"json",
                data:{username:$("#username3").val(),password:$("#password3").val()},
                success:function(data){
                    if(data==1){
                        alert("登录成功")
                        location.href="/"
                    }else{
                        location.href="/login"
                    }
                }
            })
        })
    })
    
    
    
    
    
    
    
    
    
