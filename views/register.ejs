    <script>
        $(function(){
            $("#btn").click(function(){
                if($("#username2").val()!=""&&$("#password2").val()!=""){
                    console.log("222")
                $.ajax({
                    type:"post",
                    url:"/users/register",
                    dataType:"json",
                    data:{username:$("#username2").val(),password:$("#password2").val()},
                    success:function(data){
                        console.log(data)
                        if(data==0){
                            alert("注册成功")
                            location.href="/login"
                        }else{
                            alert("用户名被占用")
                            location.href="/register"
                        }
                    }
                })
                }else{
                    alert("用户名或者密码不能为空")
                    location.href("/register")
                }
            })
        })
    
    
    
    
    
    
    
    
